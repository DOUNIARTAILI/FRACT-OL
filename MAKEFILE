SRC = draw.c ft_atof.c init.c julia.c main.c mandelbrot.c tool_fract.c tools_keypress.c tools.c tools2.c zoom.c errors_handler.c 
SRC_bonus = burningship.c draw_bonus.c ft_atof.c init.c julia_bonus.c main_bonus.c mandelbrot_bonus.c tool_fract.c tools_keypress.c tools.c tools2.c zoom.c errors_handler.c
OBJS = $(SRC:.c=.o)
OBJS_bonus = $(SRC_bonus:.c=.o)
NAME = fractol
NAME_BONUS = fractol_bonus
CC = cc

RM = rm -rf

FLAGS = -Wall -Wextra -Werror

all: $(NAME)

fractol : $(OBJS)
	$(CC) $(FLAGS) $(OBJS) -o $(NAME)

fractol_bonus : $(OBJS_bonus)
	$(CC) $(FLAGS) $(OBJS_bonus) -o $(NAME_BONUS)

%.o : %.c fractol.h
	$(CC) $(FLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS) $(OBJS_bonus)

fclean: clean
	$(RM) $(NAME) $(NAME_BONUS)

re: fclean $(NAME) $(NAME_BONUS)

.PHONY = all clean fclean re